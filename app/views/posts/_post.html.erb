<div class="mb-5" id="<%= dom_id post %>">
  <div class="img-link-box">
    <a href="#">
      <% post.images.each do |image| %>
        <%= image_tag image %>
      <% end %>
    </a>
  </div>
  <div class="mt-4 text-start">
    <div class="d-flex justify-content-between mb-2">
      <div class="d-inline-flex">
        <a class="font-family-tertiary font-small fw-medium uppercase" href="#">Tips &amp; Tricks</a>
      </div>
      <div class="d-inline-flex">
        <span class="font-small"><%= post.created_at %></span>
      </div>
    </div>
    <h4><a class="text-link-1" href="#">How to take good pictures</a></h4>
    <p><%= post.caption %></p>
    <p>Likes: <%= post.show_likes_count %></p>
    <div class="mt-3">
      <a class="button-text-1" href="#">Read More</a>
    </div>
  </div>
</div>


<div class="header header-lg right border-bottom sticky-top">
  <div class="container-fluid">
    <div class="header-logo">
      <h3><%= link_to "Railsgram", root_path %></h3>
    </div>
    <div class="header-menu">
      <ul class="nav">
        <% if current_user %>
          <li class="nav-item">
            <a class="nav-link d-toggle" href="#"><%= current_user.full_name %></a>
            <ul class="nav-dropdown">
              <li class="nav-dropdown-item"><a class="nav-dropdown-link" href="#">Profile</a></li>
              <li class="nav-dropdown-item">
                <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-dropdown-link' %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>

      </ul>
    </div>
    <button class="header-toggle">
      <span></span>
    </button>
  </div>
</div>
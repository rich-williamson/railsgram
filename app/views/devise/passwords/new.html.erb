<div class="container">
  <div class="row text-center pt-5">
    <div class="col-md-4 offset-md-4">
      <%= image_tag 'logo.png' %>
      <h4 class="my-5">Forgotten Password</h4>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-style-2"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-3 mt-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Phone number or email" %>
        </div>
        <%= f.button "Reset", class: "button button-gray button-md button-radius" %>
      <% end %>

      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% elsif alert %>
        <p class="alert"><%= alert %></p>
      <% end %>

      <p class="mt-4">
        <%= link_to "Sign in", new_user_session_path, class: "fs-6 my-4 text-decoration-none" %>
      </p>

      <p>
        <%= link_to "Sign Up", new_user_registration_path, class: "fs-6 my-4 text-decoration-none" %>
      </p>
    </div>
  </div>
</div>

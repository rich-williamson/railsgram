<div class="container home-section d-flex flex-row justify-content-center align-items-center">
  <div class="login-section pt-3">
    <div class="card text-center pt-5">
      <%= image_tag 'logo.png', class: "card-img-top" %>
      <div class="card-body">
        <p>Sign In</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3 mt-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Phone number or email" %>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
          </div>
          <%= f.button "Log in", class: "btn btn-primary d-block w-100" %>
        <% end %>

        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% elsif alert %>
          <p class="alert"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div class="card text-center py-2 mt-3">
      <div class="card-text">
        <%= link_to "Forgotten password?", new_user_password_path, class: "fs-6 my-4 text-decoration-none" %>
      </div>
    </div>

    <div class="card text-center py-2 mt-3">
      <div class="card-text">
        Don't have an account?
        <%= link_to "Sign up", new_user_registration_path, class: "fs-6 my-4 text-decoration-none" %>
      </div>
    </div>
  </div>
</div>